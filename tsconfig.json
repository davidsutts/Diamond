{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": ["ES6", "DOM"],
    "outDir": "static/build/",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}
